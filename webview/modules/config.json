{
  "libraries": {
    "description": "第三方库 - 必须最先加载",
    "files": [
      "lib/lucide@0.544.0.min.js",
      "lib/tailwind@3.4.17.min.js"
    ]
  },
  "modules": {
    "core": {
      "description": "核心功能模块",
      "files": [
        "modules/utils/Logger.js",
        "modules/utils/DOMUtils.js",
        "modules/utils/LucideIcons.js",
        "modules/core/StateManager.js",
        "modules/core/EventManager.js"
      ]
    },
    "layout": {
      "description": "布局管理模块",
      "files": [
        "modules/layout/MovableManager.js"
      ],
      "dependencies": ["core"]
    },
    "ui": {
      "description": "用户界面模块",
      "files": [
        "modules/ui/UIManager.js",
        "modules/ui/FloatingToolbar.js",
        "modules/ui/ToolbarDragHandler.js"
      ],
      "dependencies": ["core"]
    },
    "interaction": {
      "description": "交互处理模块",
      "files": [
        "modules/interaction/SelectionManager.js",
        "modules/interaction/KeyboardHandler.js",
        "modules/interaction/MouseHandler.js"
      ],
      "dependencies": ["core", "ui", "layout"]
    },
    "main": {
      "description": "主应用模块",
      "files": [
        "modules/core/WebVisualEditor.js",
        "webview.js"
      ],
      "dependencies": ["core", "layout", "ui", "interaction"]
    }
  },
  "features": {
    "elementPanel": {
      "description": "Figma风格元素面板",
      "files": [
        "modules/ui/ElementPanel.js",
        "modules/ui/PanelManager.js"
      ],
      "dependencies": ["ui"],
      "enabled": false
    },
    "dragDrop": {
      "description": "拖拽重排功能",
      "files": [
        "modules/interaction/DragDropManager.js",
        "modules/ui/DragPreview.js"
      ],
      "dependencies": ["interaction"],
      "enabled": false
    },
    "layoutModes": {
      "description": "布局模式管理",
      "files": [
        "modules/layout/FlexLayoutMode.js",
        "modules/layout/AbsoluteLayoutMode.js",
        "modules/layout/FlowLayoutMode.js"
      ],
      "dependencies": ["layout"],
      "enabled": false
    }
  }
}